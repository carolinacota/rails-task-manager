<div class="container">

  <h1><%= @task.title %></h1>

  <button><%= link_to 'Edit this task', edit_task_path %></button>

  <p><%= @task.details %></p>

  <% if @task.completed %>
    <p> <i class="fa fa-check-square-o"></i> This task is completed. </p>
  <% else %>
    <p> <i class="fa fa-square-o"></i> This task is not completed yet </p>
  <% end %>

  <p><%= link_to 'Back to list', tasks_path %></p>

</div>
